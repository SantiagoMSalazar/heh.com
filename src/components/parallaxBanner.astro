---
const {url,text} = Astro.props;
---
<div class="relative h-[30vh] overflow-hidden">
    <div id="parallax-bg" class="absolute inset-0 bg-cover bg-center" 
         style=`background-image: url(${url}); background-attachment: fixed;`>
    </div>
    <div class="relative h-full flex items-center justify-center p-4 z-10">
      <h2 class="text-4xl font-bold text-white text-center">
        {text}
      </h2>
    </div>
</div>
